    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "require1k": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "concurrently": "latest",
    "es-module-loader": "latest",
    "livereload": "latest",
    "typescript": "latest"
  }
}
